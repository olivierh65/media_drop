<?php

/**
 * @file
 * Template and theme hooks for Media Drop.
 */

/**
 * Implements hook_theme().
 */
function media_drop_theme($existing, $type, $theme, $path) {
  return [
    'media_drop_upload_page' => [
      'variables' => [
        'album_name' => NULL,
      ],
      'template' => 'media-drop-upload-page',
    ],
  ];
}

/**
 * Implements hook_views_data().
 */
function media_drop_views_data() {
  $data['views']['media_drop_media_info'] = [
    'title' => t('Media Details'),
    'help' => t('A custom field that displays filtered media information for each media.'),
    'field' => [
      'id' => 'media_drop_media_info',
    ],
  ];

  return $data;
}

/**
 * Implements hook_preprocess_views_view().
 */
function media_drop_preprocess_views_view(&$variables) {
  if ($variables['view']->id() === 'media_drop_manage') {
    $variables['#attached']['library'][] = 'media_drop/admin_grid';
    $variables['#attached']['library'][] = 'media_drop/media-info';
  }
}

/**
 * Implements hook_mail().
 */
function media_drop_mail($key, &$message, $params) {
  switch ($key) {
    case 'upload_notification':
      $message['subject'] = t('New media uploaded to @album', [
        '@album' => $params['album']->name,
      ]);

      $message['body'][] = t('A new media has been uploaded to the album "@album".', [
        '@album' => $params['album']->name,
      ]);

      $message['body'][] = '';

      $message['body'][] = t('@file_count file@plurial uploaded by @user', [
        '@file_count' => $params['file_count'],
        '@plurial' => $params['file_count'] > 1 ? 's' : '',
        '@user' => $params['user_name'],
      ]);

      $message['body'][] = '';
      $message['body'][] = t('Manage your media at: @url', [
        '@url' => \Drupal::request()->getSchemeAndHttpHost() . '/admin/config/media/media-drop/manage',
      ]);

      break;
  }
}

